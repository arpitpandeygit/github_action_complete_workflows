[
  {
    "name": "strapi",
    "image": "312504613160.dkr.ecr.us-east-1.amazonaws.com/strapi:latest",
    "essential": true,

    "portMappings": [
      {
        "containerPort": 1337,
        "hostPort": 1337,
        "protocol": "tcp"
      }
    ],

    "environment": [
      { "name": "HOST", "value": "0.0.0.0" },
      { "name": "PORT", "value": "1337" },

      { "name": "APP_KEYS", "value": "key1,key2,key3,key4" },
      { "name": "JWT_SECRET", "value": "jwtsecret123" },
      { "name": "ADMIN_JWT_SECRET", "value": "adminjwtsecret123" },
      { "name": "ADMIN_AUTH_SECRET", "value": "adminauthsecret123" },
      { "name": "API_TOKEN_SALT", "value": "apitokensalt123" },

      { "name": "DATABASE_CLIENT", "value": "postgres" },
      { "name": "DATABASE_HOST", "value": "dev-strapi-db.cilgvzfazty5.us-east-1.rds.amazonaws.com:5432" },
      { "name": "DATABASE_PORT", "value": "5432" },
      { "name": "DATABASE_NAME", "value": "strapidb" },
      { "name": "DATABASE_USERNAME", "value": "strapi" },
      { "name": "DATABASE_PASSWORD", "value": "StrapiPass123" },
      { "name": "DATABASE_SSL", "value": "false" }
    ],

    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/strapi",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "ecs"
      }
    }
  }
]